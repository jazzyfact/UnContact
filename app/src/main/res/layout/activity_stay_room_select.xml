<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30sp"
    tools:context=".Res.ResSelectMenuActivity">

    <ImageView
        android:id="@+id/room_select_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10sp"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/room_select_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="룸1" />

    <TextView
        android:id="@+id/room_select_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="10000원" />

    <!--구분선-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="#D8D8D8"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/room_select_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="옵션1" />

        <RadioButton
            android:id="@+id/room_select_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="옵션2" />

        <RadioButton
            android:id="@+id/room_select_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="옵션3" />
    </LinearLayout>






    <!--구분선-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:background="#D8D8D8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="금액" />

        <TextView
            android:id="@+id/room_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190sp"
            android:gravity="right"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#3990ff"
            android:text="16000원" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_room_rsrvt_cart"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="#3990ff"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="예약하기" />

</LinearLayout>