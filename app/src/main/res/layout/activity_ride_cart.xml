<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50sp"
    android:orientation="vertical"
    android:padding="30sp"
    tools:context=".Res.ResCartActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="20sp"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="교통권구매" />

    <TextView
        android:id="@+id/res_cart_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="20sp"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="결제금액" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ride_cart_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="교통 1일권" />

        <TextView
            android:id="@+id/ride_cart_menu_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="지하철,버스,타슈 무제한 사용" />


    </LinearLayout>

    <!--구분선-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="20sp"
        android:background="#D8D8D8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="총 결제 금액" />

        <TextView
            android:id="@+id/ride_cart_total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="100sp"
            android:gravity="right"
            android:textColor="#3990ff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="10,000" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#3990ff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="원" />
    </LinearLayout>


    <!--구분선-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:background="#D8D8D8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <Button
            android:id="@+id/btn_ride_cart_pay"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30sp"
            android:textColor="#ffffff"
            android:background="#3990ff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="결제하기" />
    </LinearLayout>

</LinearLayout>