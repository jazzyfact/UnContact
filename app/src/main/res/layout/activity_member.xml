<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.member"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="50sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#000"
            android:textSize="25sp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            />


        <!--            회원가입 입력하는곳-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 "
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="left"
            android:layout_marginTop="20sp"/>
        <EditText
            android:id="@+id/et_memberId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디를 입력해주세요"
            android:textColorHint="#808080"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="20sp"
            android:background="@drawable/rounded_border_edittext"
            android:padding="10sp"
            android:layout_marginTop="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 "
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="left"
            android:layout_marginTop="20sp"/>
        <EditText
            android:id="@+id/et_memberPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호를 입력해주세요"
            android:textColorHint="#808080"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="20sp"
            android:background="@drawable/rounded_border_edittext"
            android:padding="10sp"
            android:inputType="textPassword"
            android:layout_marginTop="10sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연령대 "
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="left"
            android:layout_marginTop="20sp"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp_memberSelctAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="left"
            android:layout_marginTop="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">
            <TextView
                android:id="@+id/tv_genderMan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border_edittext"
                android:text="남자"
                android:padding="10sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_genderMan_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border_edittext"
                android:backgroundTint="#3990ff"
                android:text="남자"
                android:padding="10sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_genderWoman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border_edittext"
                android:text="여자"
                android:padding="10sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_weight="1"
                android:layout_marginLeft="5sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_genderWoman_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border_edittext"
                android:backgroundTint="#3990ff"
                android:text="여자"
                android:padding="10sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_genderetc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border_edittext"
                android:text="기타"
                android:padding="10sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_weight="1"
                android:layout_marginLeft="5sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_genderetc_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border_edittext"
                android:backgroundTint="#3990ff"
                android:text="기타"
                android:padding="10sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역  "
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="left"
            android:layout_marginTop="20sp"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp_memberSelct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"/>



        <!--    코드 인증-->
        <Button
            android:id="@+id/bt_member"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text="회원가입하기"
            android:textColor="#fff"
            app:cornerRadius="50dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_shape"/>


    </LinearLayout>





</LinearLayout>