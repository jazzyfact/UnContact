<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainBottom.bottom_sheet"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:background="#fff"

    >










    <!--  ========================== 결제완료 시작 ============================= -->
    <LinearLayout
        android:id="@+id/ll_passwordPush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:padding="30sp"
        android:layout_marginHorizontal="30sp"
        android:orientation="vertical"
        android:backgroundTint="#fff"
        android:visibility="gone">
        <!--        결제금액 시작 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제하기"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍길동님의 결제 비밀번호"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="18sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15sp">

            <TextView
                android:id="@+id/tv_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000"
                android:background="#e9e9e9"
                android:paddingHorizontal="22sp"
                android:paddingVertical="10sp"/>
            <TextView
                android:id="@+id/tv_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000"
                android:background="#e9e9e9"
                android:paddingHorizontal="22sp"
                android:paddingVertical="10sp"
                android:layout_marginLeft="10sp"/>
            <TextView
                android:id="@+id/tv_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000"
                android:background="#e9e9e9"
                android:paddingHorizontal="22sp"
                android:paddingVertical="10sp"
                android:layout_marginLeft="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/tv_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000"
                android:background="#e9e9e9"
                android:paddingHorizontal="22sp"
                android:paddingVertical="10sp"/>
            <TextView
                android:id="@+id/tv_btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000"
                android:background="#e9e9e9"
                android:paddingHorizontal="22sp"
                android:paddingVertical="10sp"
                android:layout_marginLeft="10sp"/>
            <TextView
                android:id="@+id/tv_btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000"
                android:background="#e9e9e9"
                android:paddingHorizontal="22sp"
                android:paddingVertical="10sp"
                android:layout_marginLeft="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#fff"
                android:background="#e74c3c"
                android:paddingHorizontal="22sp"
                android:paddingVertical="10sp"
                android:layout_marginLeft="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15sp">

            <TextView
                android:id="@+id/tv_btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000"
                android:background="#e9e9e9"
                android:paddingHorizontal="22sp"
                android:paddingVertical="10sp"/>
            <TextView
                android:id="@+id/tv_btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000"
                android:background="#e9e9e9"
                android:paddingHorizontal="22sp"
                android:paddingVertical="10sp"
                android:layout_marginLeft="10sp"/>
            <TextView
                android:id="@+id/tv_btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000"
                android:background="#e9e9e9"
                android:paddingHorizontal="22sp"
                android:paddingVertical="10sp"
                android:layout_marginLeft="10sp"/>

            <TextView
                android:id="@+id/tv_btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000"
                android:background="#e9e9e9"
                android:paddingHorizontal="22sp"
                android:paddingVertical="10sp"
                android:layout_marginLeft="10sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/bt_passSend"
            android:layout_width="match_parent"
            android:layout_height="43sp"
            android:text="보내기"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/shape"
            android:layout_marginTop="15sp"
            android:backgroundTint="#2ecc71"/>
        <!--결제금액 끝 -->
    </LinearLayout>
    <!--  ==========================비밀번호 치는곳으로 끝 ============================= -->



    <!--  ========================== 결제 완료 시작 ============================= -->
    <LinearLayout
        android:id="@+id/ride_com_ll_passwordFine"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:background="@drawable/shape"
        android:padding="30sp"
        android:layout_marginHorizontal="30sp"
        android:orientation="vertical"
        android:backgroundTint="#fff"
        android:visibility="visible">
        <!--        결제금액 시작 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제하기"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제가"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="bottom"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료되었습니다"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            />

    </LinearLayout>
    <!--  ========================== 결제 완료 끝 ============================= -->




</LinearLayout>

