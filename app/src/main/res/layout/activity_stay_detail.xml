<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30sp"
    tools:context=".Res.RestaurantDetailActivity">

    <TextView
        android:id="@+id/tv_res_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:text="호텔 1"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/tv_stay_detail_rating_bar"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:layout_gravity="center"
        android:numStars="5"
        android:rating="3"
        android:stepSize="0.5"
        android:textSize="20sp"
        android:theme="@style/RatingBar" />

    <TextView
        android:id="@+id/tv_res_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:gravity="center"
        android:text="호텔설명입니다"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:layout_marginLeft="10sp"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="객실" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stay_detail_recylcerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_stay_detail">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>